{{#if tasks}}
<table class="table table-bordered table-hover table-dark mt-4">
  <thead>
    <tr>
      <th>N.</th>
      <th>Title</th>
      <th>Description</th>
      <th>Operations</th>
    </tr>
  </thead>

  <tbody>
    {{#each tasks}}
    <tr>
      <td>{{@index}}</td>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>
        {{#if done}}
        <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">UnDone</a>
        {{else}}
        <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success">Done</a>
        {{/if}}
        <a href="/tasks/{{_id}}/edit" class="btn btn-info">Edit</a>
        <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
      </td>
    </tr>

    {{/each}}
  </tbody>

</table>

{{else}}
<div class="text-center">
  <h1>No Task</h1>
</div>
{{/if}}