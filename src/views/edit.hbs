<body style="background: #444;">
    <div class="container">
        <div class="row">
            <div class="col-md-5 offset-md-3">
                <div class="card card-body bg-black p-4 text-white rounded-2 mt-4 ">
                    <h1>Edita una tarea</h1>
                    <form action="/tasks/{{task._id}}/edit" method="POST">

                        <div class="mb-3">
                            <input type="text" name="title" placeholder="Title" value="{{task.title}}"
                                class="form-control rounded-2 bg-dark text-white" />
                        </div>
                        <div class="mb-3">
                            <textarea name="description" rows="3" placeholder="Add a Description"
                            class="form-control rounded-2 bg-dark text-white">{{task.description}} </textarea>
                        </div>

                        <button class="btn btn-warning">Update</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</body>